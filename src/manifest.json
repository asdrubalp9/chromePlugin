{
  "manifest_version": 3,
  "name": "ChatGPT tools for devs",
  "version": "1.0",
  "description": "Streamline your development workflow with our powerful Chrome plugin designed to optimize your interactions with ChatGPT. Receive sound notifications, download conversations, and effortlessly paste and optimize HTML content, empowering developers with a seamless and efficient AI-assisted experience",
  "permissions": [
    "downloads",
    "audio",
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "clipboard"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Mi Plugin"
  },
  "web_accessible_resources": [{
    "resources": ["ding.mp3"],
    "matches": ["*://*.openai.com/*"]
  }],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.openai.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.openai.com/*"
  ]
}
